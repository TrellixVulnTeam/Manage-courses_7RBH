<div class="mt-4">
    <h3>Upload course</h3>
    <form method="POST" action="/courses/{{course._id}}?_method=PUT">
  <div class="form-group">
        <label for="name">Name course</label>
        <input type="text" class="form-control" value="{{course.name}}" id="exampleInputEmail1" name="name">
  </div>
  <div class="form-group">
        <label for="description">Description</label>
        <textarea class="form-control" id="exampleInputEmail1" name="description">{{course.description}}</textarea>
  </div>
   <div class="form-group">
        <label for="videoId">Video ID</label>
        <input type="text" class="form-control"value="{{course.videoId}}" id="exampleInputEmail1" name="videoId">
  </div>
  <button type="submit" class="btn btn-primary">Modify</button>
</form>
</div>